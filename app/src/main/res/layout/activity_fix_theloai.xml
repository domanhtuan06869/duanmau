<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuan.duanmau.fix_theloai">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:src="@drawable/logobook" />

        <EditText
            android:hint="tên thể loại"
            android:id="@+id/edtSuaTentheloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="vị trí"
            android:id="@+id/edtSuaVitri"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:hint="mo tả"
            android:id="@+id/suaMota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:text="cập nhập"
                android:id="@+id/btnfixBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnbackbook"
                android:text="quay lại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>