<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingTop="5dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:src="@drawable/img_theloaisach"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9">

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="17dp"
                android:id="@+id/txtIdTheLoai"

                android:gravity="center"/>

            <TextView
                android:id="@+id/txtTenTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ten the loai"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp" />
            <TextView
                android:textColor="@color/colorPrimary"
                android:text="mo táº£"
                android:id="@+id/tvMota"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fixTheloai"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:src="@drawable/fixxx" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img_close"
            android:id="@+id/imgCloseTheLoai"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>