<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:layout_weight="10"
    android:padding="7dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_nguoidung"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvuserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username" />

        <TextView
            android:id="@+id/txtHoTenNguoiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Xin chao minh laÃŒ user " />

        <TextView
            android:id="@+id/tvSdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdt nguoi dung" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgFixuser"
        android:layout_width="83dp"
        android:layout_height="55dp"
        android:src="@drawable/fixxx" />

    <ImageView
        android:id="@+id/imgCloseUser"
        android:layout_width="83dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/img_close" />

</LinearLayout>